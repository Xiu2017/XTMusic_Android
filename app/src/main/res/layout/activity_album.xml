<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/albumbg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar_gradient"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:onClick="onClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="48dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingTop="6dp"
                android:singleLine="true"
                android:text="炫听音乐"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/artist"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/title"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingVertical="2dp"
                android:text="炫酷生活"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/share"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="3dp"
            android:onClick="onClick"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/share" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/info"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_gradient" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btmBar"
        android:layout_below="@+id/info"
        android:background="@color/colorAlbumBg"
        android:paddingVertical="12dp">

        <LinearLayout
            android:id="@+id/albumParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/album"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:src="@mipmap/album_max"
                app:civ_border_color="#30000000"
                app:civ_border_width="5dp" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <TextView
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btmBar"
        android:gravity="center"
        android:text="正在缓冲..."
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btmBar"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:id="@+id/dot1"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/circle_dot_sel"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/dot2"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="3dp"
            android:background="@drawable/circle_dot"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btmBar"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btmbar_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/timeBar"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/minTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <SeekBar
                android:id="@+id/currentTime"
                style="@style/CustomSeekbarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/maxTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingRight="14dp"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lastBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="42dp"
                android:layout_marginVertical="21dp"
                android:layout_weight="1"
                android:onClick="playControl"
                android:padding="10dp"
                android:src="@drawable/btm_last_sel" />

            <ImageView
                android:id="@+id/playBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="9dp"
                android:layout_weight="1"
                android:onClick="playControl"
                android:padding="5dp"
                android:src="@drawable/btm_play_sel" />

            <ImageView
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="42dp"
                android:layout_marginVertical="21dp"
                android:layout_weight="1"
                android:onClick="playControl"
                android:padding="10dp"
                android:src="@drawable/btm_next_sel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>